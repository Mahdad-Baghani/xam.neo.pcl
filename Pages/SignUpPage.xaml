        <Grid
            Grid.Row="1"
            Padding="10, 10, 10, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--Name entry fields-->
            <StackLayout
                Grid.Row="0"
                Orientation="Vertical">
                <Label
                    Text="نام و نام خانوادگی"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                </Label>
                <Entry
                    HorizontalTextAlignment="End"
                    Keyboard="Text"
                    Text="{Binding UserName}">
                </Entry>
            </StackLayout>

            <!--phone number entry fields-->
            <StackLayout
                Grid.Row="1"
                Orientation="Vertical">
                <Label
                    Text="شماره تلفن"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                </Label>
                <Entry
                    Keyboard="Telephone"
                    Text="{Binding UserCellNumber}">
                </Entry>
            </StackLayout>

            <!--email entry-->
            <StackLayout
                Grid.Row="2"
                Orientation="Vertical">
                <Label
                    Text="نام کاربری (یا رایانامه)"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                </Label>
                <Entry
                    Keyboard="Email"
                    Text="{Binding UserEmail}">
                </Entry>
            </StackLayout>

            <!--password entry-->
            <StackLayout
                Grid.Row="3"
                Orientation="Vertical">
                <Label
                    Text="رمز عبور"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                </Label>
                <Entry
                    IsPassword="True"
                    Text="{Binding UserPassword}">
                </Entry>
                <!--<Entry x:Name="entPassword"
                   Grid.Row="2" 
                   Grid.Column="2"
                   Keyboard="Text"
                   Completed="EntPassword_OnCompleted"
                   IsPassword="True"
                   Placeholder="Driver Code"
                   PlaceholderColor="Gray"
                   Style="{StaticResource EntryStyleLrg}"
                   Text="{Binding EnteredLogInPassword}"
                   VerticalOptions="Start" />-->
            </StackLayout>
            <Button
                Grid.Row="4"
                Text="ثبت نام"
                Image="icon"
                Command="{Binding SignUpCommand}">
            </Button>
        </Grid>
    </Grid>
</ContentPage>