        Padding="0, 10, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label 
            Text="{Binding ConnectionRes}"/>
